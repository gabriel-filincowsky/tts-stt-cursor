{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../out",
    "types": [
      "mocha",
      "node",
      "sinon",
      "assert"
    ],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "tsBuildInfoFile": "../out/test/.tsbuildinfo",
    "baseUrl": "..",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts"
  ],
  "references": [
    { "path": ".." }
  ]
} 