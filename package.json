{
  "name": "tts-stt-cursor",
  "displayName": "TTS-STT for Cursor",
  "description": "Speech-to-Text and Text-to-Speech capabilities for Cursor IDE using Sherpa-onnx",
  "version": "0.0.1",
  "publisher": "gabriel-filincowsky",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tts-stt-cursor.startSTT",
        "title": "Start Speech-to-Text",
        "icon": "$(mic)"
      },
      {
        "command": "tts-stt-cursor.startTTS",
        "title": "Start Text-to-Speech",
        "icon": "$(megaphone)"
      },
      {
        "command": "tts-stt-cursor.selectVoice",
        "title": "Select TTS Voice",
        "icon": "$(settings-gear)"
      },
      {
        "command": "tts-stt-cursor.testTTS",
        "title": "TTS-STT: Test TTS Configuration",
        "category": "TTS-STT"
      },
      {
        "command": "tts-stt.testTTS",
        "title": "Test TTS Configuration"
      },
      {
        "command": "tts-stt.testSTT",
        "title": "Test STT Configuration"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "tts-stt-cursor.startSTT",
          "group": "navigation"
        },
        {
          "command": "tts-stt-cursor.startTTS",
          "group": "navigation"
        },
        {
          "command": "tts-stt-cursor.testTTS",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "TTS-STT for Cursor",
      "properties": {
        "tts-stt-cursor.enableMicrophone": {
          "type": "boolean",
          "default": true,
          "description": "Enable microphone access for speech recognition"
        }
      }
    }
  },
  "scripts": {
    "preinstall": "tsc -p ./",
    "postinstall": "node scripts/setup-models.js && node scripts/setup-native.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run setup-test-env",
    "setup-test-env": "node scripts/setup-test-env.js",
    "test": "mocha out/test/**/*.js"
  },
  "dependencies": {
    "extract-zip": "^2.0.1",
    "sherpa-onnx-node": "1.10.30",
    "tar": "^6.2.0",
    "unbzip2-stream": "^1.4.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^14.17.0",
    "@types/sinon": "^10.0.20",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.8.2",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.3"
  },
  "enabledApiProposals": [
    "speech"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "This extension requires microphone access for speech recognition"
    }
  },
  "private": true,
  "files": [
    "out/**/*",
    "models/**/*",
    "media/**/*",
    "native/**/*"
  ]
}
